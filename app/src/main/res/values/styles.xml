<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="DefaultButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/yellow</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/start_shaking_button_drawable_padding</item>
        <item name="android:textSize">@dimen/default_font_size</item>
    </style>

</resources>
